<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:textColor">@color/textColorPrimary</item>
    </style>

    <style name="HeaderTextStyle">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginBottom">8dp</item>
        <item name="android:padding">16dp</item>
        <item name="android:background">@color/colorPrimaryDark</item>
        <item name="android:textColor">@color/textColorAccent</item>
        <item name="android:textSize">20sp</item>
    </style>

    <style name="ContainerPadded">
        <item name="android:padding">16dp</item>
    </style>

    <style name="NormalTextStyle">
        <item name="android:textSize">16sp</item>
    </style>

    <style name="CodeSnippetStyle">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:padding">16dp</item>
        <item name="android:typeface">monospace</item>
    </style>

    <style name="AnswerTextStyle">
        <item name="android:textColor">@color/textColorSecondary</item>
        <item name="android:textSize">16sp</item>
    </style>

    <style name="cardView" parent="CardView">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_gravity">center</item>
        <item name="android:layout_margin">24dp</item>
        <item name="android:padding">16dp</item>
        <item name="cardElevation">8dp</item>
        <item name="cardCornerRadius">4dp</item>
    </style>

    <style name="cardViewLinearLayout">
        <item name="android:orientation">vertical</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:layout_marginBottom">16dp</item>
    </style>

    <style name="checkbox">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginLeft">16dp</item>
        <item name="android:paddingLeft">8dp</item>
        <item name="android:textAppearance">?android:textAppearanceMedium</item>
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">@color/textColorSecondary</item>
    </style>

    <style name="radioButton">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:paddingLeft">8dp</item>
        <item name="android:textColor">@color/textColorSecondary</item>
        <item name="android:textSize">16sp</item>
        <item name="android:textAppearance">?android:textAppearanceMedium</item>
    </style>

    <style name="radioGroup">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:padding">16dp</item>
        <item name="android:orientation">vertical</item>
    </style>

</resources>
